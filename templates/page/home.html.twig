{# templates/page/home.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - Fort Loop Studio{% endblock %}

{% block body %}
    <div class="video-background-container">
        <video id="background-video" loop muted playsinline preload="metadata">
            <source src="{{ asset('videos/background.mp4') }}" type="video/mp4">
            Votre navigateur ne supporte pas la vidéo HTML5.
        </video>
    </div>

    <div class="content-overlay">
        <h1>Fort Loop Studio</h1>
        {# L'état initial est 'play' car la vidéo est en pause #}
        <button id="play-pause-button" class="play-pause-button" type="button" aria-label="Lancer la vidéo"></button>
    </div>
{% endblock %}